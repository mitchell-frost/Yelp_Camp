<%- include ('../partials/header'); -%>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<div class= "container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>

    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">       
                   <div class="thumbnail" >
                        <img src="<%= campground.image %>" id="thumbnail-size">
                        <div class="caption" id="middle">
                            <h4> <%= campground.name %> </h4>
                        </div>
                        <div id="middle">
                            <p>
                                <a href="/campgrounds/<%= campground._id %>" class = "btn btn-primary">More Info</a>
                            </p>
                        </div>                     
                    </div>               
            </div>
        <% }); %>        
    </div>
</div>

<%- include ('../partials/footer'); -%>